{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node10",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2023",
    "module": "commonjs",
    "lib": ["es2023", "dom"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@snapflow/api-client": ["packages/api-client/src/index.ts"],
      "@snapflow/executor-api-client": [
        "packages/executor-api-client/src/index.ts"
      ],
      "@snapflow/sdk": ["packages/typescript-sdk/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}